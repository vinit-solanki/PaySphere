{
    "version": 2,
    "builds": [
      {
        "src": "frontend/build/**",
        "use": "@vercel/static"
      },
      {
        "src": "backend/api/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/api/index.js"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/build/$1"
      }
    ],
    "env": {
      "MONGODB_URI": "@mongodb_uri",
      "JWT_SECRET": "@jwt_secret",
      "NODE_ENV": "production"
    }
  }